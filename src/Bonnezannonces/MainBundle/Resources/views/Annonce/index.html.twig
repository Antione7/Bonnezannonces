{% extends "MainBundle::main_n2.html.twig" %}

{% block n3 %}
    <h1>Annonce list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idannonce</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>Datecreation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('annonce_show', { 'id': entity.idAnnonce }) }}">{{ entity.idAnnonce }}</a></td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.image }}</td>
                <td>{% if entity.dateCreation %}{{ entity.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('annonce_show', { 'id': entity.idAnnonce }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('annonce_edit', { 'id': entity.idAnnonce }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('annonce_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock n3 %}
